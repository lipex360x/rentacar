module.exports = {
  description: 'Generate a {{pascalCase name }}',
  prompts: [
    {
      type: 'input',
      name: 'fileName',
      message: 'File Name',
      // default: 'test',
      validate: (value) => {
        if (!value) {
          return 'Value is required'
        }
        return true
      }
    }

    // snippet: plopPromptTemplate
  ],

  actions: (data) => {
    const pathTemplate = './{{ name }}/templates'

    const files = [
      {
        data: {},
        path: '../../xxx',
        name: 'fileName.ts',
        template: '{{ name }}.hbs',
        force: false
      }

      // snippet: plopFilesTemplate
    ]

    // Create Files
    const action = []

    files.forEach(file => {
      const createFile = {
        type: 'add',
        path: `${file.path}/${file.name}`,
        data: file.data,
        templateFile: `${pathTemplate}/${file.template}`,
        force: !!file.force
      }

      action.push(createFile)
    })

    // Message
    const message = () => {
      return `Module ${data.moduleName} created`
    }
    action.push(message)

    return action
  }
}
