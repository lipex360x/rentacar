const { capitalize } = require('../_utils/textTransform')

module.exports = {
  description: 'Generate a {{ name }}',
  prompts: [
    {
      type: 'input',
      name: 'name',
      message: 'Text',
      validate: (value) => {
        if (!value) {
          return 'Value is required'
        }
        return true
      }
    }

    // snippet: promptTemplate
  ],

  actions: (data) => {
    const file = {
      path: `../../{{filepath}}`,
      name: data.name
      template: '{{template}}.hbs'
    }

    // Create Files
    const action = []

    files.forEach(file => {
      const createFile = {
        type: 'add',
        path: `${file.path}/${file.name}`,
        templateFile: `./modules/templates/${file.template}`,
        force: false
      }

      action.push(createFile)
    })

    // Message
    const message = () => {
      return `Module ${capitalize(data.moduleName)} created`
    }
    action.push(message)

    return action
  }
}


